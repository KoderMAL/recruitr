<p id="notice"><%= notice %></p>

<h1>Available Positions</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Applications count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @available_positions.each do |available_position| %>
      <tr>
        <td><%= available_position.content %></td>
        <td><%= available_position.applications_count %></td>
        <td><%= link_to 'Show', available_position %></td>
        <td><%= link_to 'Edit', edit_available_position_path(available_position) %></td>
        <td><%= link_to 'Destroy', available_position, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Available Position', new_available_position_path %>
