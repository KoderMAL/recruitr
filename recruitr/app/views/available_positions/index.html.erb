<h1>RecruitR</h1>
<p>Edit available positions:</p>
<p>
<% @available_positions.each do |pos| %>
  <tr>
    <td><%= pos.title %></td>
    <td><%= pos.skills %></td>
    <td><%= link_to "Show", pos %></td>
    <td><%= link_to "Edit", edit_available_position_path(pos) %></td>
    <td><%= link_to "Destroy", pos, method: :delete, data: { confirm: "Are you sure?" } %></td>
  </tr>
<% end %>
</p>


<%= link_to "Add new position", new_available_position_path %>